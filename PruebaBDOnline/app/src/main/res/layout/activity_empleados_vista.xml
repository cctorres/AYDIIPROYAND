<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:background="@color/colorRedDark"
    tools:context="com.example.computador.pruebabdonline.Vista.VistaRestaurante">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="10dp"
        android:background="@color/colorRedLight"
        android:layout_margin="10dp"
        android:weightSum="1">


        <ListView
            android:id="@+id/lv_empleados_emv"
            android:layout_width="wrap_content"
            android:layout_height="150sp"
            android:layout_weight="1.92" />
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_gravity="bottom"
        android:layout_height="wrap_content">
    <LinearLayout

        android:layout_gravity="bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/colorWhite"
        android:padding="10dp"
        android:layout_margin="15dp"
        android:gravity="center"
        >

        <TextView
            android:id="@+id/editText5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="number"
            android:text="Nro identificacion:"
            android:textColor="@color/colorRedDark"
            android:textSize="15dp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/et_identificacion_emv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:textSize="15dp"
            android:inputType="textPersonName"
            android:textColor="@color/colorRedDark" />

        <TextView
            android:id="@+id/editText8"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:textSize="15dp"
            android:textColor="@color/colorRedDark"
            android:textStyle="bold"
            android:inputType="textPersonName"
            android:text="Nombre:" />

        <EditText
            android:id="@+id/et_nombre_emv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:textSize="15dp"
            android:textColor="@color/colorRedDark"
            android:inputType="textPersonName" />

        <TextView
            android:id="@+id/editText7"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:textSize="15dp"
            android:textColor="@color/colorRedDark"
            android:textStyle="bold"
            android:inputType="textPersonName"
            android:text="Cargo:" />

        <Spinner
            android:id="@+id/sp_cargo_emv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:textSize="15dp"/>

        <TextView
        android:id="@+id/editText70"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:textSize="15dp"
        android:textColor="@color/colorRedDark"
        android:textStyle="bold"
        android:inputType="textPersonName"
        android:text="Telefono:" />

        <EditText
            android:id="@+id/et_telefono_emv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:textSize="15dp"
            android:textColor="@color/colorRedDark"
            android:inputType="phone" />

        <TextView
            android:id="@+id/editText6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:textSize="15dp"
            android:textColor="@color/colorRedDark"
            android:textStyle="bold"
            android:inputType="textPersonName"
            android:text="Contraseña:" />

        <EditText
            android:id="@+id/et_contraseña_emv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:textSize="15dp"
            android:textColor="@color/colorRedDark"
            android:inputType="textPassword" />

        <Button
            android:id="@+id/bt_agregar_emv"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textSize="15dp"
            android:text="Agregar" />
    </LinearLayout>
    </ScrollView>
</LinearLayout>